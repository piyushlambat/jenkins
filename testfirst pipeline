pipeline {
    agent any

    environment {
        AWS_REGION = 'us-west-2'
        S3_BUCKET = 'testjenkintest'
    }

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/your-username/your-repo.git'  // üîÅ Replace with your repo URL
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Build done by Jenkins" > build_output.txt'
            }
        }

        stage('Upload to S3') {
            steps {
                sh 'aws s3 cp build_output.txt s3://${S3_BUCKET}/ --region ${AWS_REGION}'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Successfully uploaded to S3!'
        }
        failure {
            echo '‚ùå Pipeline failed.'
        }
    }
}
